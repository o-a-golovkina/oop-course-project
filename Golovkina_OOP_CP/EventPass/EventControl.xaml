<UserControl x:Class="EventPass.EventControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EventPass"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <Viewbox Stretch="Uniform">
        <Grid Width="400" Height="450">
            <Border BorderBrush="White" BorderThickness="1" CornerRadius="30" Background="White"/>
            <Grid Margin="10">
                <Image x:Name="Image_EventImage" Margin="21,23,25,134" Stretch="Fill"/>
                <Label x:Name="Label_EventName" Content="Label" Margin="27,340,27,0" FontSize="28" FontWeight="Bold" Height="60" VerticalAlignment="Top"/>
                <Label x:Name="Label_EventType" Content="Type" Margin="27,308,27,0" FontSize="18" FontWeight="Bold" Height="39" VerticalAlignment="Top" Foreground="#FF9B72CF"/>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>
