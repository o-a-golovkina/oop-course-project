            <ComboBox x:Name="ComboBox_Drinks" Width="55"
                Height="18"
                FontSize="8"
                FontFamily="Segoe UI"
                Foreground="#FFACACAC"
                Margin="622,305,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderThickness="0"
                Padding="8,0"
                SelectedIndex="0" Cursor="Hand">
