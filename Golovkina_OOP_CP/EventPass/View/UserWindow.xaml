<Window x:Class="EventPass.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventPass"
        mc:Ignorable="d"
        Title="EventPass" Height="450" Width="800" Icon="/icon.png">

    <Window.Resources>
        <Style x:Key="TextOnlyHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFA6A6A6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF9B72CF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Viewbox Stretch="Uniform">
        <Grid HorizontalAlignment="Center">
            <Border BorderThickness="1" Background="#199B72CF" CornerRadius="30,30,30,30" Margin="146,0,-15,0">
                <Border BorderThickness="1" Height="35" Margin="19,15,19,0" VerticalAlignment="Top" CornerRadius="20,20,20,20" Background="#269B72CF" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="-1.49"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.507"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                </Border>
            </Border>
            <Grid HorizontalAlignment="Left" Height="434" VerticalAlignment="Top" Width="800" Grid.ColumnSpan="2">
                <Label Content="Event" Margin="34,64,718,342" FontWeight="Bold" Foreground="#FFA6A6A6" FontSize="14"/>
                <Label Content="Pass" Margin="71,64,689,342" FontWeight="Bold" Foreground="#FF9B72CF" FontSize="14"/>
                <Label x:Name="Lable_Poster" Content="Events poster" HorizontalAlignment="Left" Margin="170,81,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                <local:EventControl Margin="170,115,507,177"/>
                <local:EventControl Margin="317,115,360,177"/>
                <local:EventControl Margin="464,115,213,177"/>
                <local:EventControl Margin="170,275,507,17"/>
                <local:EventControl Margin="317,275,360,17"/>
                <local:EventControl Margin="464,275,213,17"/>
                <Border BorderThickness="1" HorizontalAlignment="Left" Height="46" Margin="610,65,0,0" VerticalAlignment="Top" Width="190" Background="White" CornerRadius="15,15,15,15">
                    <Label Content="Choose city" HorizontalAlignment="Left" Height="20" Margin="9,-1,0,0" VerticalAlignment="Top" Width="61" FontSize="8" FontWeight="Bold"/>
                </Border>
                <Border BorderThickness="1" HorizontalAlignment="Left" Height="165" Margin="610,119,0,0" VerticalAlignment="Top" Width="190" Background="White" CornerRadius="15,15,15,15"/>
                <Border BorderThickness="1" HorizontalAlignment="Left" Height="105" Margin="610,294,0,0" VerticalAlignment="Top" Width="190" Background="White" CornerRadius="15,15,15,15">
                    <Label Content="Welcome" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="45" FontSize="8" FontWeight="Bold" Margin="9,4,0,0"/>
                </Border>
                <Button x:Name="Button_Concerts" Content="Concerts" Margin="42,164,670,0" Width="88" Height="25" VerticalAlignment="Top"
        Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand"/>
                <Button x:Name="Button_Theatre" Content="Theatre" Margin="42,205,670,0" Width="88" Height="28" VerticalAlignment="Top"
        Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand"/>
                <Button x:Name="Button_StandUp" Content="Stand-up" Margin="42,245,670,0" Width="88" Height="25" VerticalAlignment="Top"
        Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand"/>
                <Image Margin="24,168,757,247" Source="/Resources/icon-concert.png" Stretch="Fill"/>
                <Image Margin="24,208,757,207" Source="/Resources/icon-theater.png" Stretch="Fill"/>
                <Image Margin="24,251,757,165" Source="/Resources/icon-comedy.png" Stretch="Fill"/>
                <Border BorderBrush="#FFA6A6A6" BorderThickness="0.5" HorizontalAlignment="Left" Height="25" Margin="173,21,0,0" VerticalAlignment="Top" Width="232" Background="White" CornerRadius="15,15,15,15">
                    <TextBox x:Name="TextBox_Search" 
    HorizontalAlignment="Left"
    TextWrapping="Wrap"
    VerticalAlignment="Center"
    Width="118"
    Background="{x:Null}"
    BorderBrush="{x:Null}"
    BorderThickness="0"
    Foreground="#FFA6A6A6"
    SelectionBrush="#FF9B72CF"
    Text="Search event..."
    Margin="32,0,0,0"
    FontSize="8"
    FocusVisualStyle="{x:Null}" GotFocus="TextBox_Search_GotFocus" LostFocus="TextBox_Search_LostFocus" />
                </Border>
                <Image Margin="186,27,601,394" Source="/Resources/icon-search.png" Stretch="Fill"/>
                <Calendar x:Name="Calendar_MyCalendar" HorizontalAlignment="Left" Margin="614,126,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Gray" Height="151" Width="182"/>
                <ComboBox x:Name="ComboBox_City" Width="110"
          Height="18"
          FontSize="8"
          FontFamily="Segoe UI"
          Foreground="#FFACACAC"
          Margin="622,86,0,0"
          HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Background="Transparent"
          BorderThickness="0"
          Padding="8,0"
          SelectedIndex="0" Cursor="Hand">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Padding" Value="8,2"/>
                            <Setter Property="FontSize" Value="8"/>
                            <Setter Property="Foreground" Value="Gray"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#EEE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Resources>

                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Border CornerRadius="6" 
                    Background="White" 
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                                <Grid>
                                    <ToggleButton Name="ToggleButton"
                                  Grid.Column="2"
                                  Focusable="False"
                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press"
                                  Background="Transparent"
                                  BorderThickness="0">
                                        <Path HorizontalAlignment="Right"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"
                              Data="M 0 0 L 4 4 L 8 0 Z"
                              Fill="#FFACACAC"
                              Width="8" Height="4"/>
                                    </ToggleButton>
                                    <ContentPresenter Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="8,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>
                                    <Popup Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                        <Border CornerRadius="6"
                                Background="White"
                                BorderBrush="#DDD"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                                            <ScrollViewer Margin="0" SnapsToDevicePixels="True">
                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Popup>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ComboBox.Template>

                    <!-- Пункти меню -->
                    <ComboBoxItem Content="All cities" IsSelected="True"/>
                    <ComboBoxItem Content="Kharkiv"/>
                    <ComboBoxItem Content="Odesa"/>
                    <ComboBoxItem Content="Dnipro"/>
                    <ComboBoxItem Content="Kyiv"/>
                </ComboBox>
                <Image Margin="694,22,82,388" Source="/Resources/icon-person.png" Stretch="Fill"/>
                <Image Margin="616,22,160,388" Source="/Resources/icon-money.png" Stretch="Fill"/>
                <Image Margin="540,25,241,390" Source="/Resources/icon-cart.png" Stretch="Fill"/>
                <Button x:Name="Button_Orders" Content="Orders" Margin="554,24,210,0" Height="20" VerticalAlignment="Top"
                    Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand" FontSize="8" Click="Button_Orders_Click"/>
                <Button x:Name="Button_Balance" Content="Balance" Margin="636,25,128,0" Height="20" VerticalAlignment="Top"
                    Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand" FontSize="8" Click="Button_Balance_Click"/>
                <Button x:Name="Button_UserLogin" Content="User login" Margin="712,25,44,0" Height="20" VerticalAlignment="Top"
                    Style="{StaticResource TextOnlyHoverButtonStyle}" Cursor="Hand" FontSize="8" Click="Button_UserLogin_Click"/>
            </Grid>
            <Border BorderThickness="1" HorizontalAlignment="Left" Height="70" Margin="620,319,0,0" VerticalAlignment="Top" Width="170" Background="#FFF5F1FA" CornerRadius="15,15,15,15">
                <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Love creating unforgettable memories? With EventPass, discovering and booking events is effortless — especially with our exclusive deals! Enjoy 5% OFF your ticket to any event! Use before 16/06." VerticalAlignment="Top" FontSize="8" Width="154" Margin="0,7,0,0" TextAlignment="Justify"/>
            </Border>
            <Button x:Name="Button_Home" Content="Button" HorizontalAlignment="Left" Margin="49,35,0,0" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="44" Width="43" Background="{x:Null}" Cursor="Hand" Click="Button_Home_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <Image Source="/Resources/icon.png"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Viewbox>
</Window>
